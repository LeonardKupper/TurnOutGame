@page "/"
@namespace TurnOut.App.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TurnOut</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="TurnOut.App.styles.css" rel="stylesheet" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@700&display=swap" rel="stylesheet">

    <style>

		.loc {
		  margin: 0;
		  position: absolute;
		  top: 0;
		  left: 0;
		}
		.loc-smooth {
			transition: transform 2s;
		}
		.loc-hcvc {
		  transform: translate(50vw, 50vh) translate(-50%, -50%);
		}
		.loc-hcvb {
		  transform: translate(50vw, 100vh) translate(-50%, -100%);
		}
		.loc-hrvt {
		  transform: translate(100vw, 0vh) translate(-100%, 0%);
		}


		.menuText {
			font-family: Orbitron;
			font-style: normal;
			font-weight: bold;
			font-size: 2rem;
			line-height: 2.5rem;
			letter-spacing: 0.48rem;
			color: #FFFFFF;
			text-shadow: 0px 0px 8px #FFFFFF;

			-webkit-user-select: none;
			-moz-user-select: none;
			-ms-user-select: none;
			user-select: none;

			text-transform: uppercase;
		}

		.menuNameInput {
			width: 30rem;
			height: 3rem;

			font-family: Orbitron;
			font-weight: bold;
			font-size: 2rem;

			background-color: transparent;
			color: white;
			border: 2px solid white;
			border-radius: 10px;
			text-align: center;
			box-shadow: 0 0 10px #ddd;
			text-transform: uppercase;
		}
		.menuNameInput:focus {
			border: 0px;
		}

		.menuButton { }
		.menuButton:hover {
			color: #0FFDB0;
			cursor: pointer;
		}

		@@keyframes breathingOpacity {
			from { opacity: 0.7; }
			to { opacity: 1.0; }
		}
		.breathingOpacity {
			animation: breathingOpacity 1.5s ease-in-out infinite alternate;
		}
    </style>
</head>
<body style="margin: 0; padding: 0; background-color: #000000; overflow: hidden;">
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
